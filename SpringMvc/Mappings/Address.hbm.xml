<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="SpringMvc " namespace="SpringMvc.Models.POCO">
  <class name="Address" table="Address">
    <id name="Id" column="Id" type="Int64">
      <generator class="foreign">
        <param name="property">PersonalData</param>
      </generator>
    </id>
    <property name="Street" column="Street" type="string"/>
    <property name="City" column="City" type="string"/>
    <property name="PostalCode" column="PostalCode" type="string"/>
    <property name="Country" column="Country" type="string"/>

    <one-to-one name="PersonalData" class="PersonalData" constrained="true"/>
  </class>
</hibernate-mapping>