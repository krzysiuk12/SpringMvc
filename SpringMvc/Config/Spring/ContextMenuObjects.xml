<?xml version="1.0" encoding="utf-8" ?>
<objects xmlns="http://www.springframework.net"
         xmlns:tx="http://www.springframework.net/tx">

  
  
  <!-- **************************************************************************** 
                User Account Panel - Secondary Menu Positions 
  **************************************************************************** -->
  <object id="userAccountPanelView" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="Account Information"/>
    <property name="ControllerAction" value="Index"/>
    <property name="ControllerName" value="UserAccountPanel"/>
  </object>

  <object id="userAccountPanelEdit" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="Edit"/>
    <property name="ControllerAction" value="Index"/>
    <property name="ControllerName" value="UserAccountPanel"/>
  </object>

  <object id="userAccountPanelChangePassword" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="Change Password"/>
    <property name="ControllerAction" value="ChangePassword"/>
    <property name="ControllerName" value="UserAccountPanel"/>
  </object>

  
  

  <!-- ****************************************************************************
                  Administrator Panel - Secondary Menu Positions 
  **************************************************************************** -->
  <object id="administratorPanelViewAllUsers" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="View All Users"/>
    <property name="ControllerAction" value="ViewAllUserAccounts"/>
    <property name="ControllerName" value="AdministratorPanel"/>
  </object>

  <object id="administratorPanelChangeUserStatus" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="Change User Status"/>
    <property name="ControllerAction" value="ChangeUserStatus"/>
    <property name="ControllerName" value="AdministratorPanel"/>
  </object>

  <object id="administratorPanelChangeUserPassword" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="Change User Password"/>
    <property name="ControllerAction" value="ChangeUserPassword"/>
    <property name="ControllerName" value="AdministratorPanel"/>
  </object>

  <object id="administratorPanelViewUserInformation" type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
    <property name="Label" value="View User Information"/>
    <property name="ControllerAction" value="ViewUserInformation"/>
    <property name="ControllerName" value="AdministratorPanel"/>
  </object>


  
  
  <!-- ****************************************************************************
                            Primary Menu Positions
  **************************************************************************** -->
  <object id="userAccountPanelPrimaryPosition" type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
    <property name="CurrentSecondaryPosition" value="0"/>
    <property name="Label" value="User Account Panel"/>
    <property name="ControllerAction" value="Index"/>
    <property name="ControllerName" value="UserAccountPanel"/>
    <property name="SecondaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
        <ref object="userAccountPanelView"/>
        <ref object="userAccountPanelEdit"/>
        <ref object="userAccountPanelChangePassword"/>
      </list>
    </property>
  </object>

  <object id="administratorPanelPrimaryPosition" type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
    <property name="CurrentSecondaryPosition" value="0"/>
    <property name="Label" value="Administrator Panel"/>
    <property name="ControllerAction" value="ViewAllUserAccounts"/>
    <property name="ControllerName" value="AdministratorPanel"/>
    <property name="SecondaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.SecondaryMenuPosition">
        <ref object="administratorPanelViewAllUsers"/>
        <ref object="administratorPanelChangeUserStatus"/>
        <ref object="administratorPanelChangeUserPassword"/>
        <ref object="administratorPanelViewUserInformation"/>
      </list>
    </property>
  </object>

  <object id="shopPrimaryPosition" type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
    <property name="CurrentSecondaryPosition" value="0"/>
    <property name="Label" value="Shop"/>
    <property name="ControllerAction" value="Index"/>
    <property name="ControllerName" value="MainShop"/>
  </object>

  <object id="aboutPrimaryPosition" type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
    <property name="Label" value="About"/>
    <property name="ControllerAction" value="About"/>
    <property name="ControllerName" value="Bookstore"/>
  </object>

  <object id="contactPrimaryPosition" type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
    <property name="Label" value="Contact"/>
    <property name="ControllerAction" value="Contact"/>
    <property name="ControllerName" value="Bookstore"/>
  </object>


  
  
  <!-- ******************* Menu Objects ******************* -->
  <object id="administratorMenu" type="SpringMvc.Menu.MenuObject">
    <property name="CurrentPrimaryPosition" value="0"/>
    <property name="PrimaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
        <ref object="administratorPanelPrimaryPosition"/>
      </list>
    </property>
  </object>

  <object id="workerMenu" type="SpringMvc.Menu.MenuObject">
    <property name="CurrentPrimaryPosition" value="0"/>
    <property name="PrimaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
        <ref object="shopPrimaryPosition"/>
        <ref object="aboutPrimaryPosition"/>
        <ref object="contactPrimaryPosition"/>
      </list>
    </property>
  </object>

  <object id="guestMenu" type="SpringMvc.Menu.MenuObject">
    <property name="CurrentPrimaryPosition" value="0"/>
    <property name="PrimaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
        <ref object="shopPrimaryPosition"/>
        <ref object="aboutPrimaryPosition"/>
        <ref object="contactPrimaryPosition"/>
      </list>
    </property>
  </object>

  <object id="userAccountMenu" type="SpringMvc.Menu.MenuObject">
    <property name="CurrentPrimaryPosition" value="0"/>
    <property name="PrimaryMenuPositions">
      <list element-type="SpringMvc.Menu.MenuPositions.PrimaryMenuPosition">
        <ref object="shopPrimaryPosition"/>
        <ref object="userAccountPanelPrimaryPosition"/>       
        <ref object="aboutPrimaryPosition"/>
        <ref object="contactPrimaryPosition"/>
      </list>
    </property>
  </object>
  
  
  
  <!-- ******************* Menu Objects ******************* -->
  <object id="menuObjectProvider" type="SpringMvc.Menu.MenuObjectProvider">
    <property name="AdministratorMenu" ref="administratorMenu"/>
    <property name="UserAccountMenu" ref="userAccountMenu"/>
    <property name="WorkerMenu" ref="workerMenu"/>
    <property name="GuestMenu" ref="guestMenu"/>
    <property name="GetAllMenuObjects">
      <list element-type="SpringMvc.Menu.MenuObject">
        <ref object="administratorMenu"/>
        <ref object="userAccountMenu"/>
        <ref object="workerMenu"/>
        <ref object="guestMenu"/>
      </list>
    </property>
  </object>
  
  
</objects>
